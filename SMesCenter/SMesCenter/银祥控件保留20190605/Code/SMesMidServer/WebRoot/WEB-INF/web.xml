<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>SMesMidServer</display-name>
	<description>SMesMidServer</description>
	<context-param>
		<param-name>CallFunctionBerforExecuteSql</param-name>
		<param-value>False</param-value>
	</context-param>
	<context-param>
		<param-name>CallFunction</param-name>
		<param-value>{?=call somepkg.someFunction()}</param-value>
	</context-param>
		<servlet>
			<servlet-name>ServletConfigurator</servlet-name>
				<servlet-class>
					 org.logicalcobwebs.proxool.configuration.ServletConfigurator
				</servlet-class>
				<init-param>
					 <param-name>xmlFile</param-name>
					 <param-value>WEB-INF/config/dbconfig.xml</param-value>
				</init-param>
			<load-on-startup>0</load-on-startup>
		 </servlet>
         <servlet>
                 <servlet-name>proxool</servlet-name>
                 <servlet-class>
                         org.logicalcobwebs.proxool.admin.servlet.AdminServlet
                 </servlet-class>
         </servlet>
	<servlet>
		<servlet-name>dbrequest</servlet-name>
		<servlet-class>com.smes.mw.server.RequestAcceptor</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>smesServerStartUp</servlet-name>
		<servlet-class>com.smes.mw.server.ServerStartUP</servlet-class>
		<init-param>
			<param-name>daisy.home</param-name>
			<param-value>D:/Workspaces/MyEclipse 10/SMesMidServer/WebRoot/WEB-INF/config</param-value>
		</init-param>
		<init-param>
			<param-name>configuration</param-name>
			<param-value>daisy.xml</param-value>
		</init-param>
		<init-param>
			<param-name>WebServer</param-name>
			<param-value>Tomcat</param-value>
		</init-param>
			<init-param>
			<param-name>WebLogicProviderUrl</param-name>
			<param-value>t3://127.0.0.1:6001</param-value>
		</init-param>
		<init-param>
			<param-name>WebLogicJNDIName</param-name>
			<param-value>SMesOracle</param-value>
		</init-param>
		<init-param>
			<param-name>isNeedLogSqlInDatabase</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>DefaultDBName</param-name>
			<param-value>SMES</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>UploadFileService</servlet-name>
		<servlet-class>com.smes.mw.server.UploadFileService</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>UploadBusiFileService</servlet-name>
		<servlet-class>com.smes.mw.server.BusiFileUploadService</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>BusFileDownLoadService</servlet-name>
		<servlet-class>com.smes.mw.server.BusFileDownLoadService</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>BusFileDeleteService</servlet-name>
		<servlet-class>com.smes.mw.server.BusFileDeleteService</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>updateService</servlet-name>
		<servlet-class>
			com.smes.mw.server.UpdateService
		</servlet-class>
		<init-param>
			<param-name>location</param-name>
			<param-value>D:/UpdateFiles</param-value>
		</init-param>
		<init-param>
			<param-name>busiFile</param-name>
			<param-value>D:/BusFiles</param-value>
		</init-param>
		<init-param>
			<param-name>busiUploadFileSize</param-name>
			<param-value>200</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ping</servlet-name>
		<servlet-class>
			com.smes.mw.server.smesServerHealthCheck
		</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
		<servlet>
			<servlet-name>systemStatus</servlet-name>
			<servlet-class>com.smes.mw.server.SystemStatus</servlet-class>
			<load-on-startup>4</load-on-startup>
		</servlet>
		<servlet-mapping>
                 <servlet-name>proxool</servlet-name>
                 <url-pattern>/proxool</url-pattern>
         </servlet-mapping>
	<servlet-mapping>
		<servlet-name>dbrequest</servlet-name>
		<url-pattern>/req</url-pattern>
	</servlet-mapping>
 <servlet-mapping>
    <servlet-name>UploadFileService</servlet-name>
    <url-pattern>/UploadFileService</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>UploadBusiFileService</servlet-name>
    <url-pattern>/UploadBusiFileService</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BusFileDownLoadService</servlet-name>
    <url-pattern>/BusFileDownLoadService</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BusFileDeleteService</servlet-name>
    <url-pattern>/BusFileDeleteService</url-pattern>
  </servlet-mapping>
	<servlet-mapping>
		<servlet-name>ping</servlet-name>
		<url-pattern>/ping</url-pattern>
	</servlet-mapping>
   <servlet-mapping>
		<servlet-name>updateService</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>systemStatus</servlet-name>
    <url-pattern>/systemStatus</url-pattern>
  </servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>logon.jsp</welcome-file>
		<welcome-file>mainMenu.jsp</welcome-file>
	</welcome-file-list>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
</web-app>
